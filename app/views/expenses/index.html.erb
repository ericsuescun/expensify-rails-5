<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h4 class="filter-header">Transaction Type <span>Choose to filter</span></h4>
      <div class="list-group filter-type extype">
     <!--    <a href="#" class="list-group-item extype">Purchase</a>
        <a href="#" class="list-group-item extype">Withdrawal</a> -->
        <!-- more transaction types -->
        <% Expense.extypes.each do |extype, value| %>
          <%= link_to extype.capitalize, "#{request.protocol}#{request.host_with_port}#{request.fullpath}" + '&extype=' + extype, remote: true, class: "list-group-item extype" %>
        <% end%>
      </div>

      <h4 class="filter-header">Categoría <span>Selecciona para filtrar</span></h4>
      <div class="list-group filter-type category">
        <% Expense.categories.each do |category, value| %>
          <%= link_to category.capitalize, "#{request.protocol}#{request.host_with_port}#{request.fullpath}" + '&category=' + category, remote: true, class: "list-group-item extype" %>
        <% end%>
      </div>
    </div>
    <div class="col-md-9 index-data" id="index-data">
      <%= render 'indexbar' %>
      <div class="row" style="margin-top: 20px;">
        <div class="col-md-12">
          <%= link_to new_expense_path, remote: true, class: "btn btn-success pull-left" do %>
            <span class="glyphicon glyphicon-plus"></span> New Expense
          <% end %>
          <h4 class="dropdown pull-right">
            <% if params[:year].blank? && params[:month].blank? %>
              <button id="dateFilter" type="button" class="dropdown-toggle btn btn-link" data-toggle="dropdown"><%= Date.today.strftime('%B')%> <%= Date.today.year%> <span class="caret"></span></button>
            <% else %>
              <button id="dateFilter" type="button" class="dropdown-toggle btn btn-link" data-toggle="dropdown"><%= Date.new(params[:year].to_i,params[:month].to_i,1).strftime('%B')%> <%= params[:year]%> <span class="caret"></span></button>
            <% end %>
            <ul class="dropdown-menu" role="menu">
              <% for n in 0..11 do %>
                <li role="presentation" id="<%= n.month.ago %>">
                  <%= link_to expenses_path + '?month=' + n.month.ago.strftime('%-m') + '&year=' + n.month.ago.year.to_s, remote: true, id: n.month.ago, "data-turbolinks": "false" do %>
                    <%= n.month.ago.strftime('%B')%> <%= n.month.ago.year %>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </h4>
        </div>
      </div>

      <table id="expenses-table" class="table table-hover" style="margin-top: 20px;">
        <thead>
          <tr>
            <th class="text-center">Día</th>
            <th>Concepto</th>
            <th class="text-right">Categoría</th>
            <th class="text-right">Valor</th>
          </tr>
        </thead>
        <tbody id="expenses-table-body">
          <%= render 'expenses' %>
        </tbody>
      </table>
    </div>
  </div>
</div>