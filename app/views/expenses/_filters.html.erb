<div class="col-md-3" id="filters-bar">
  <h4 class="filter-header">Transaction Type <span>Choose to filter</span></h4>
  <div class="list-group filter-type extype">
    <% Expense.extypes.each do |extype, value| %>
      <% if extype == params[:extype] %>
        <%= link_to extype.capitalize, removeparam("#{request.protocol}#{request.host_with_port}#{request.fullpath}", '&extype=' + extype), remote: true, class: "list-group-item extype active" %>
      <% else %>
        <% if "#{request.protocol}#{request.host_with_port}#{request.fullpath}".include? ('&extype=') %>
          <%= link_to extype.capitalize, removeparam("#{request.protocol}#{request.host_with_port}#{request.fullpath}", '&extype=' + extype), remote: true, class: "list-group-item extype" %>
        <% else %>
          <%= link_to extype.capitalize, "#{request.protocol}#{request.host_with_port}#{request.fullpath}" + '&extype=' + extype, remote: true, class: "list-group-item extype" %>
        <% end%>
      <% end%>
    <% end%>
  </div>

  <h4 class="filter-header">Categor√≠a <span>Selecciona para filtrar</span></h4>
  <div class="list-group filter-type category">
    <% Expense.categories.each do |category, value| %>
      <% if category == params[:category] %>
        <%= link_to category.capitalize, removeparam("#{request.protocol}#{request.host_with_port}#{request.fullpath}", '&category=' + category), remote: true, class: "list-group-item category active" %>
      <% else %>
        <% if "#{request.protocol}#{request.host_with_port}#{request.fullpath}".include? ('&category=') %>
          <%= link_to category.capitalize, removeparam("#{request.protocol}#{request.host_with_port}#{request.fullpath}", '&category=' + category), remote: true, class: "list-group-item category" %>
        <% else %>
          <%= link_to category.capitalize, "#{request.protocol}#{request.host_with_port}#{request.fullpath}" + '&category=' + category, remote: true, class: "list-group-item category" %>
        <% end %>
      <% end %>
    <% end%>
  </div>
</div>