<div class="container">
  <div class="row">
    <div class="total-box col-md-3">
      <%= number_to_currency(@acc_today, precision: 0, delimiter: ',') %>
      <span>HOY</span>
    </div>
    <div class="total-box col-md-3">
      <%= number_to_currency(@acc_yest, precision: 0, delimiter: ',') %>
      <span>AYER</span>
    </div>
    <div class="total-box col-md-3">
      <%= number_to_currency(@acc_month, precision: 0, delimiter: ',') %>
      <span>ESTE MES</span>
    </div>
    <div class="total-box col-md-3">
      <%= number_to_currency(@acc_lmonth, precision: 0, delimiter: ',') %>
      <span>MES PASADO</span>
    </div>
  </div>

  <div class="row" style="margin-top: 40px;">
    <div class="box col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">Últimos 6 Meses</div>
        <div class="panel-body">
          <%= content_tag :div, "", "style": "height: 250px;", id: "expenses-chart", data: {expenses: monthly_data} %>
        </div>
      </div>
    </div>
    <div class="box col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">Por Día</div>
        <div class="panel-body">
          <%= content_tag :div, "", "style": "height: 250px;", id: "daily-expenses-chart", data: {expenses: daily_data} %>
        </div>
      </div>
    </div>
  </div>

  <div class="row" style="margin-top: 180px;">
    <div class="box col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">Por Categoría</div>
        <div class="panel-body">
          <!-- <div id="category-chart" style="height: 250px;"></div> -->
          <%= content_tag :div, "", "style": "height: 250px;", id: "category-chart", data: {expenses: category_data} %>
        </div>
      </div>
    </div>
    <div class=" box col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">Acumulado</div>
        <div class="panel-body">
          <!-- <div id="month-acc" style="height: 250px;"></div> -->
          <%= content_tag :div, "", "style": "height: 250px;", id: "month-acc", data: {expenses: acc_data} %>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(charts());
</script>